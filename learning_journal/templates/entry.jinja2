{% extends "../index.html" %}
{% block header %}
{% if request.has_permission('edit') %}
    <li class="tab"><a href="/entries/{{entry.id}}/edit">Edit</a></li>
    <li class="tab"><a href="/logout">Log Out</a></li>
{% else %}
    <li class="tab"><a href="/login">Log In</a></li>
{% endif %}
    <li class="tab"><a href="/">Home</a></li>
{% endblock %}
{% block content %}
    <h1>{{ entry.title }}</h1>
    <p>{{ entry.rendered_text }} Last Updated: {{ entry.created }}</p>
{% endblock %}
